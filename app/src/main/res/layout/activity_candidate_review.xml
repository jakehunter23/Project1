<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CandidateReview">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="91dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/back_arrow_review"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito"
        android:text="4. Review and Submit"
        android:textSize="26sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/nunito"
        android:hint="1. Your Information"
        android:textStyle="bold"
        android:background="@drawable/background_transparent"
        android:textColorHint="#000000"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"
        android:textSize="18sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/nunito"
        android:hint="2. Resume and other documents"
        android:textStyle="bold"
        android:background="@drawable/background_transparent"
        android:textColorHint="#000000"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"
        android:textSize="18sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/nunito"
        android:hint="3. Work and Education History"
        android:textStyle="bold"
        android:background="@drawable/background_transparent"
        android:textColorHint="#000000"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"
        android:textSize="18sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="284dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textColor="#3CA6DA"
        android:gravity="center"
        android:text="Save Draft"
        android:background="@drawable/background"
        android:paddingLeft="19dp"
        android:textSize="20dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:id="@+id/review_submit"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="91dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textColor="#fff"
        android:gravity="center"
        android:text="Submit"
        android:background="@drawable/background_solid"
        android:paddingLeft="19dp"
        android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>