<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="127dp">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="101dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:text="Contact Information"
                android:textSize="22dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="52dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="44dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginEnd="329dp"
                    android:layout_marginBottom="44dp"
                    app:srcCompat="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView145"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Email"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextEmailAddress4"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Enter main email ID"
            android:paddingLeft="29dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:textSize="17dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView152"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Email"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="right"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/text_blue"
            android:drawableRight="@drawable/add_icon"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/textView146"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:layout_marginTop="17dp"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextPhone3"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="phone"
            android:hint="Enter 10 digit number"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:textSize="17dp"
            android:paddingRight="10dp"
            android:background="@drawable/background"
            android:fontFamily="@font/nunito_semibold"/>

        <TextView
            android:id="@+id/textView153"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Contact Number"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="right"
            android:textSize="17dp"
            android:textColor="@color/text_blue"
            android:drawableRight="@drawable/add_icon"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/textView147"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="17dp"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName48"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter address line 1"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:paddingRight="10dp"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView148"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="34dp"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName49"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="City name"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:paddingRight="10dp"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/background"/>


        <TextView
            android:id="@+id/textView149"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zipcode"
            android:layout_marginTop="34dp"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter Zipcode of city"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:textSize="17dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView150"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_marginTop="34dp"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <Spinner
            android:id="@+id/spinner51"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:foreground="@drawable/background"/>

        <TextView
            android:id="@+id/textView151"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:layout_marginTop="34dp"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <Spinner
            android:id="@+id/spinner52"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:foreground="@drawable/background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="99dp">


            <Button
                android:id="@+id/ac_contact_next"
                android:layout_width="124dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="61dp"
                android:background="@drawable/background_solid"
                android:drawableRight="@drawable/next_icon"
                android:drawablePadding="12dp"
                android:fontFamily="@font/nunito_semibold"
                android:paddingRight="25dp"
                android:text="Next"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>