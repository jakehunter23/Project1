<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cli_card_lay"
        app:cardCornerRadius="7dp"
        android:layout_marginBottom="34dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="26dp"
                    app:cardCornerRadius="250dp"
                    android:id="@+id/mycon_list_dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:id="@+id/imageView58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@tools:sample/avatars" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView405"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@+id/mycon_list_dp"
                    android:text="Chris Do"
                    android:textSize="16dp"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito_semibold"/>

                <TextView
                    android:id="@+id/textView406"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView405"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/mycon_list_dp"
                    android:text="Company name"
                    android:textSize="16dp"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clickMe_card"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="34dp"
                    app:cardCornerRadius="250dp">

                    <ImageView
                        android:id="@+id/imageView59"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/keyboard_arrow_down" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ghost_layout">

                <TextView
                    android:id="@+id/textView407"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Web Developer"
                    android:textSize="16dp"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito"
                    android:layout_marginStart="37dp"/>

                <TextView
                    android:id="@+id/textView408"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="37dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView409"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 9090909090"
                        android:textSize="16dp"
                        android:textColor="@color/text_blue"
                        android:fontFamily="@font/nunito"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="37dp"/>

                    <TextView
                        android:id="@+id/textView410"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/textView409"
                        android:text="|"
                        android:textSize="16dp"
                        android:textColor="@color/text_blue"
                        android:fontFamily="@font/nunito"/>

                    <TextView
                        android:id="@+id/textView411"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/textView410"
                        android:text="+91 9090980808"
                        android:textSize="16dp"
                        android:textColor="@color/text_blue"
                        android:fontFamily="@font/nunito"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView412"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="example@gmail.com"
                    android:textSize="16dp"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="37dp"/>

                <TextView
                    android:id="@+id/textView416"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:drawableLeft="@drawable/note_solid"
                    android:drawablePadding="6dp"
                    android:textSize="16dp"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="37dp"/>

                <TextView
                    android:id="@+id/textView417"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/bell_blue"
                    android:drawablePadding="6dp"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="37dp"/>

                <TextView
                    android:id="@+id/textView413"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hyderabad"
                    android:drawableLeft="@drawable/location_on"
                    android:drawablePadding="7dp"
                    android:textSize="16dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="37dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView414"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Added on"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/nunito"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="37dp"/>

                    <TextView
                        android:id="@+id/textView415"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/textView414"
                        android:text="05-05-2021"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button38"
                        android:layout_width="96dp"
                        android:layout_height="43dp"
                        android:text="View"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="37dp"
                        android:layout_marginBottom="27dp"
                        android:textSize="18dp"
                        android:textColor="@color/text_blue"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAllCaps="false"
                        android:drawableRight="@drawable/create"
                        android:paddingRight="10dp"
                        android:textAlignment="textEnd"
                        android:drawablePadding="8dp"
                        android:background="@drawable/background_solid_white"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button39"
                        android:layout_width="115dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="27dp"
                        android:layout_toEndOf="@+id/button38"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/nunito_semibold"
                        android:drawableRight="@drawable/delete_red"
                        android:paddingRight="10dp"
                        android:drawablePadding="8dp"
                        android:textAlignment="textEnd"
                        android:background="@drawable/background_solid_white"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>