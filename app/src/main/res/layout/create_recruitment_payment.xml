<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="47dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="60dp"
                    android:layout_toEndOf="@+id/crp_icon"
                    android:fontFamily="@font/nunito"
                    android:text="Payment Information"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/crp_icon"
                    android:layout_width="52dp"
                    android:layout_height="51dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginEnd="329dp"
                        android:layout_marginBottom="67dp"
                        app:srcCompat="@drawable/payment" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView72"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Package Currency"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spinner17"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:foreground="@drawable/background" />

            <TextView
                android:id="@+id/textView88"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Package type"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spinner18"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:foreground="@drawable/background" />

            <TextView
                android:id="@+id/textView89"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="34dp"
                android:text="Package"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextTextPersonName26"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/background"
                android:ems="10"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Enter only numerical values"
                android:inputType="textPersonName"
                android:paddingLeft="29dp"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView90"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Bill rate"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextTextPersonName27"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/background"
                android:ems="10"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Enter only numerical values"
                android:inputType="textPersonName"
                android:paddingLeft="29dp"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Markup %"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextTextPersonName28"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/background"
                android:ems="10"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Enter only numerical values"
                android:inputType="textPersonName"
                android:paddingLeft="29dp"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView92"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Client margin"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextTextPersonName29"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/background"
                android:ems="10"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Ex. 10 implies 10%"
                android:inputType="textPersonName"
                android:paddingLeft="29dp"
                android:textSize="17dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:layout_height="160dp">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView67"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Days on"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/editTextTime"
                        android:layout_width="164dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_height="62dp"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/textView67"
                        android:background="@drawable/background"
                        android:ems="10"
                        android:hint="Enter days on"
                        android:inputType="time"
                        android:textSize="17dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Days off"
                        android:paddingLeft="10dp"
                         android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/editTextTime2"
                        android:layout_width="164dp"
                        android:layout_height="62dp"
                        android:layout_below="@+id/textView66"
                        android:background="@drawable/background"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_semibold"
                        android:hint="Enter Days off"
                        android:inputType="time"
                        android:textSize="17dp" />

                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Shift pattern"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextTextPersonName30"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/background"
                android:ems="10"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Shift pattern (Ex. Daily)"
                android:inputType="textPersonName"
                android:paddingLeft="29dp"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="216dp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button22"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/background_solid"
                    android:drawableRight="@drawable/save"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingRight="140dp"
                    android:text="Save"
                    android:textAlignment="textEnd"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19dp" />
            </RelativeLayout>


        </LinearLayout>

    </FrameLayout>

</ScrollView>