<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CandidateComplete">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="91dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/back_arrow_complete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black" />
    </androidx.cardview.widget.CardView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Application Complete"
            android:textSize="26dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30.61dp"
                android:layout_height="30.61dp"
                android:layout_marginLeft="28dp"
                android:src="@drawable/ic_check_circle"
                app:tint="#3DB249" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:text="Thank you for your application"
                android:textSize="20dp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/nunito"
            android:textColor="#6C6C6C"
            android:text="Thank you for submitting your application. We will review your qualifications and will contact you if there is a match with any of our current or future positions."
            android:textSize="14dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/Comp_done"
            android:layout_marginTop="512dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="101dp"
            android:text="Done"
            android:textSize="20dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:background="@drawable/background_solid"
            android:textAllCaps="false"
            android:gravity="center"
            />


    </LinearLayout>
</ScrollView>

</LinearLayout>