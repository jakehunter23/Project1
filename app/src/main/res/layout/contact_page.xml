<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_icon_contact"
                android:src="@drawable/menu_black_24dp"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>



    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:fadeScrollbars="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="285dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="99dp"
            android:fontFamily="@font/nunito"
            android:text="Reach out to us"
            android:textColor="@color/black"
            android:textSize="38dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="173dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="202dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="We love to hear from you"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="51dp"

            android:fontFamily="@font/nunito_semibold"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Enter First Name"
            android:inputType="textPersonName"
            android:paddingLeft="29dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/editTextTextPersonName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="34dp"

            android:fontFamily="@font/nunito_semibold"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Enter Last Name"
            android:inputType="textPersonName"
            android:paddingLeft="29dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTextPersonName2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="250dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Email ID"
            android:paddingLeft="29dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:layout_below="@+id/editTextTextEmailAddress2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="251dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Contact Number"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Contact Number"
            android:paddingLeft="29dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPhone"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="250dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Message"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Message"
            android:paddingLeft="29dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_below="@+id/editTextTextPersonName3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="54dp"
            android:background="@drawable/background_solid"
            android:drawableRight="@drawable/next_icon"
            android:fontFamily="@font/nunito_semibold"
            android:textAlignment="center"
            android:text="Send Message"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:paddingRight="25dp"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/chld_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="50dp"
            android:background="@mipmap/contact_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="51dp"
                app:srcCompat="@drawable/location_icon" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="27dp"
                android:layout_height="19dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="36dp"
                app:srcCompat="@drawable/mail" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentStart="true"

                android:layout_marginStart="29dp"
                android:layout_marginTop="36dp"
                app:srcCompat="@drawable/contact" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="225dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="106dp"
                android:layout_toEndOf="@+id/imageView"
                android:fontFamily="@font/nunito"
                android:text="Hyderabad"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="228dp"
                android:layout_height="34dp"
                android:layout_below="@+id/textView8"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="92dp"
                android:layout_toEndOf="@+id/imageView2"
                android:fontFamily="@font/nunito"
                android:text="support@analysed.in"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="92dp"
                android:layout_marginBottom="82dp"
                android:layout_toEndOf="@+id/imageView3"
                android:fontFamily="@font/nunito"
                android:text="+91 (630) 003 6660 /\n+91 (789) 327 8570"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
</LinearLayout>


