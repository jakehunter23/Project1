<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecruiterProfessionalInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient">

            <ImageView
                android:id="@+id/career_arrow"
                android:layout_width="27.33dp"
                android:layout_height="30.33dp"
                android:layout_marginTop="30.33dp"
                android:layout_marginStart="27.33dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="18.74dp"
                android:fontFamily="@font/nunito"
                android:text="Add Recruiter"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="36dp"
                android:fontFamily="@font/nunito"
                android:text="Fill in the details to create a new recruiter"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/dot_on_1"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="32dp"
                    android:foreground="@color/luc_white"
                    app:cardCornerRadius="250dp"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dot_on_2"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/dot_on_1"
                    android:foreground="@color/luc_white"
                    app:cardCornerRadius="250dp"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dot_on_3"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/dot_on_2"
                    android:foreground="@color/luc_white"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/card_pro_1"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/dot_on_3"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="250dp"
                    android:layout_marginBottom="34dp">

                    <ImageView
                        android:id="@+id/imageView_2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_11" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_4"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_pro_1"
                    android:foreground="@color/luc_white"
                    app:cardCornerRadius="250dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_5"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_4"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_6"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_5"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_7"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_6"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/card_pro_2"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/card_dot_7"
                    app:cardCornerRadius="250dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="34dp">

                    <ImageView
                        android:id="@+id/imageView2_forAC"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/icon_22" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_8"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_pro_2"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_9"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_8"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_10"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_9"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_11"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_10"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/card_pro_3"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/card_dot_11"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="250dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginEnd="49dp"
                        android:src="@drawable/icon_3" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_12"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_pro_3"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_13"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_12"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:id="@+id/card_dot_14"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@id/card_dot_13"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/luc_white"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_client_fragment">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="27.57dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginStart="28dp"
                android:src="@drawable/career" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:text="Career Details"
                android:textSize="26dp" />
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginStart="24dp"
            android:text="Company Name*"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:hint="Candidate currently employed in?"
            android:background="@drawable/background"
            android:paddingStart="20dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginStart="24dp"
            android:text="Designation*"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/designation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:hint="Enter current job title of the candidate"
            android:background="@drawable/background"
            android:paddingStart="20dp"
            android:paddingRight="10dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginStart="24dp"
            android:text="Business email"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/business_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:hint="Enter business email ID"
            android:background="@drawable/background"
            android:paddingStart="20dp"
            android:paddingRight="10dp"
            android:textSize="14sp"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/career_save"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="104dp"
            android:layout_marginStart="23.67dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="27dp"
            android:text="Save and Proceed"
            android:background="@drawable/background_solid"
            android:textSize="18dp"
            android:drawableEnd="@drawable/ic_send"
            android:paddingStart="50dp"
            android:paddingEnd="80dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="center"
            />



    </LinearLayout>

</ScrollView>