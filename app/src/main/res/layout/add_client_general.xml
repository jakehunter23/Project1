<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="127dp">

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="101dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="33dp"
                    android:fontFamily="@font/nunito"
                    android:text="General Information"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="51dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="44dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginEnd="329dp"
                        android:layout_marginBottom="44dp"
                        app:srcCompat="@drawable/ic_launcher_background" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView133"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <EditText
                android:id="@+id/editTextTextPersonName43"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Company name"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:paddingLeft="29dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/nunito_semibold"
                android:background="@drawable/background"/>

            <TextView
                android:id="@+id/textView135"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <Spinner
                android:id="@+id/spinner45"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:foreground="@drawable/background"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/textView136"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company URL"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <EditText
                android:id="@+id/editTextTextPersonName44"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Company's website"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:paddingRight="10dp"
                android:background="@drawable/background"
                android:paddingLeft="29dp"/>

            <TextView
                android:id="@+id/textView137"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ownership"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <Spinner
                android:id="@+id/spinner46"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:foreground="@drawable/background"/>

            <TextView
                android:id="@+id/textView138"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Industry"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <Spinner
                android:id="@+id/spinner47"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:foreground="@drawable/background"/>

            <TextView
                android:id="@+id/textView139"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <Spinner
                android:id="@+id/spinner48"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:foreground="@drawable/background"/>

            <TextView
                android:id="@+id/textView140"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent Company"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <Spinner
                android:id="@+id/parent_cmny"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:foreground="@drawable/background"/>

            <TextView
                android:id="@+id/textView141"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Contact"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <Spinner
                android:id="@+id/active_cntact"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:foreground="@drawable/background"/>

            <TextView
                android:id="@+id/textView142"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Description"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <EditText
                android:id="@+id/editTextTextPersonName45"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Enter description"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/nunito_semibold"
                android:paddingLeft="29dp"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:gravity="top"
                android:background="@drawable/background"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:padding="2dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button10"
                    android:layout_width="124dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="23dp"
                    android:layout_toEndOf="@+id/imageView18"
                    android:text="Add Photo"
                    android:textSize="15dp"
                    android:background="@drawable/background_solid_white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/nunito_semibold"/>

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/dp_1" />

            </RelativeLayout>

            <Button
                android:id="@+id/client_to_contact_button"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:layout_marginTop="63dp"
                android:layout_marginBottom="124dp"
                android:layout_marginStart="31dp"
                android:text="Next"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:background="@drawable/background_solid"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_icon"
                android:textAlignment="textEnd"
                android:drawablePadding="12dp"
                android:paddingRight="25dp"/>

        </LinearLayout>

</ScrollView>