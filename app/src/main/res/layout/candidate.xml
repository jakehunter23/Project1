<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="96dp"
            android:text="Resumate"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="46dp"
            android:text="Upload candidate's resume and covert to different format"
            android:textSize="13dp"
            android:fontFamily="@font/nunito_semibold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="33dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="28dp"
                        android:text="What is it?"
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_semibold"/>

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="14dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:textSize="16dp"
                        android:fontFamily="@font/nunito"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginTop="28.5dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28.5dp"
                        android:layout_marginStart="26dp"
                        android:text="How it works?"
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_semibold"/>

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="14dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:textSize="16dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/nunito"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button8"
            android:layout_width="162dp"
            android:layout_height="48dp"
            android:layout_marginTop="43dp"
            android:layout_marginStart="33dp"
            android:text="Upload"
            android:textSize="19dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/background_solid"
            android:drawableRight="@drawable/upload"
            android:textAlignment="textEnd"
            android:drawablePadding="12dp"
            android:paddingRight="25dp"
            android:textColor="@color/white"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="38dp"
            android:text="Convert it to"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="46dp"
            android:textAlignment="center"
            android:foreground="@drawable/background_black"/>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="66dp"
            android:text="Proceed to add details of new candidate"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button9"
            android:layout_width="162dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="33dp"
            android:layout_marginBottom="121dp"
            android:text="Proceed"
            android:textSize="19dp"
            android:background="@drawable/background_solid"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingRight="25dp"
            android:drawablePadding="12dp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/nunito_semibold"/>
    </LinearLayout>
</ScrollView>