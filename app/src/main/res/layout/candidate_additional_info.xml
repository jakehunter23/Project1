<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="32dp"
            android:text="Additional Information"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <androidx.cardview.widget.CardView
            android:layout_width="52dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="67dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="53dp"
                android:layout_height="53dp"


                android:layout_marginEnd="329dp"
                android:layout_marginBottom="67dp"
                app:srcCompat="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

        <TextView
            android:id="@+id/textView48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="Candidate Comments"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingLeft="29dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="23dp"
            android:hint="Comment"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:text="Availability Date"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText

        android:id="@+id/availability_date"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="27dp"
        android:background="@drawable/background"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Today | 20-05-2021"
        android:paddingLeft="29dp"
        android:textColorHint="@color/text_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/show_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/show_dialog"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/clock" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:text="Response Type"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="Web Response"
                android:buttonTint="#3CA6DA"
                android:fontFamily="@font/nunito_semibold"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Submission"
                android:buttonTint="#3CA6DA"
                android:fontFamily="@font/nunito_semibold"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:text="Job"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <Spinner
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="29dp"
            android:hint="Applying for which Job"
            android:fontFamily="@font/nunito_semibold"
            android:foreground="@drawable/background"/>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:text="Accessibility"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <Spinner
            android:id="@+id/editTextTextPersonName7"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="14dp"
            android:hint="Internal"
            android:fontFamily="@font/nunito_semibold"
            android:foreground="@drawable/background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="121dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="24dp"
                android:text="Save"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:background="@drawable/background_solid"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_icon"
                android:textAlignment="textEnd"
                android:drawablePadding="12dp"
                android:paddingRight="140dp"
                android:fontFamily="@font/nunito_semibold"/>
        </RelativeLayout>


    </LinearLayout>
    </FrameLayout>

</ScrollView>