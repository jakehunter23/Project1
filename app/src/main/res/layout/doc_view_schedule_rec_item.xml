<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/expand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            android:id="@+id/expand_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="27dp"
            android:elevation="8dp"
            android:padding="10dp"
            android:textAlignment="center"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="28dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView252"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Schedule"
                        android:textColor="@color/red"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView253"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView252"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/nunito"
                        android:text="05-05-2021"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />

                    <RelativeLayout
                        android:id="@+id/cand_edit_note_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:backgroundTint="@color/white"

                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@+id/cand_del_note_card"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@+id/cand_del_note_card">


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cand_del_note_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="27dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/white">


                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/cand_notes_dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="30dp"
                        app:cardCornerRadius="250dp"
                        android:layout_marginLeft="28dp">

                        <ImageView
                            android:id="@+id/cand_imageView23"
                            android:layout_width="44dp"
                            android:backgroundTint="@color/white"
                            android:layout_height="44dp"
                            android:src="@drawable/small_dp_1" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView254"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="11dp"
                        android:layout_toEndOf="@+id/cand_notes_dp"
                        android:text="Philip Martin"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/cand_notes_dp" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/cand_note_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/nunito"
                    android:text="Text"
                    android:textColor="@color/grey"
                    android:textSize="14dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="18dp"/>







            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>