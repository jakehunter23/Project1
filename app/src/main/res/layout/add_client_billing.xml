<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="127dp">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="101dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:text="Billing Information"
                android:textSize="22dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="52dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="44dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginEnd="329dp"
                    android:layout_marginBottom="44dp"
                    app:srcCompat="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView154"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:layout_marginStart="30dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName50"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter bank name"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="14dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView155"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank ID"
            android:layout_marginTop="34dp"
            android:layout_marginStart="30dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName51"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter bank ID"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="14dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView156"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Account Number"
            android:layout_marginTop="34dp"
            android:layout_marginStart="30dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName52"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Account number"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="14dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView157"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IBAN #"
            android:layout_marginTop="34dp"
            android:layout_marginStart="30dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName53"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter IBAN #"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="14dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/textView158"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VAT #"
            android:layout_marginTop="34dp"
            android:layout_marginStart="30dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/editTextTextPersonName54"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter VAT #"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="14dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="29dp"
            android:background="@drawable/background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="216dp">


            <Button
                android:id="@+id/ac_billing_save"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/background_solid"
                android:drawableRight="@drawable/save"
                android:drawablePadding="12dp"
                android:fontFamily="@font/nunito_semibold"
                android:paddingRight="25dp"
                android:text="Save"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="19dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>