<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_icon_jobl"
                android:src="@drawable/arrow_back_black"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView248"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Onboarding Process"
                android:layout_marginStart="27dp"
                android:textSize="35dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"/>

            <TextView
                android:id="@+id/textView249"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create your own onboarding process"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:textSize="15dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito_semibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 3"
                android:layout_marginTop="30dp"
                android:textSize="25dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp"
                />
            <TextView
                android:id="@+id/textView301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Introduction Videos"
                android:layout_marginTop="32dp"
                android:layout_marginStart="28dp"
                android:textSize="18dp"
                android:textColor="@color/text_blue"
                android:fontFamily="@font/nunito_semibold"/>

            <TextView

                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:layout_marginTop="15dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="21dp"
                android:textSize="14dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito"/>

            <TextView
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ticket_name"
                android:layout_marginTop="30dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <EditText
                android:id="@+id/editTextTextPersonName55"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="14dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/background"
                android:paddingLeft="29dp"
                android:hint="Company policy"/>

            <TextView
                android:id="@+id/textView238"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <EditText
                android:id="@+id/editTextTextPersonName56"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="14dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/background"
                android:paddingLeft="29dp"
                android:hint="Describe the steps and what the candi..."/>

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Agree to Terms and Conditions checkbox"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                android:textColor="@color/grey"
                android:layout_marginStart="27dp"
                android:fontFamily="@font/nunito_semibold"
                android:buttonTint="@color/text_blue"/>

            <TextView
                android:id="@+id/textView239"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Information"
                android:layout_marginTop="34dp"
                android:layout_marginStart="26dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"/>

            <EditText
                android:id="@+id/editTextTextPersonName57"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="14dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/background"
                android:paddingLeft="29dp"
                android:hint="Additional helpful information"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="27dp"
                android:backgroundTint="#F5F5F5"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="78dp"
                        android:layout_height="39dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/background_solid"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Add"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:rowCount="2"
                        android:columnCount="2">

                        <LinearLayout
                            android:layout_gravity="fill"
                            android:layout_rowWeight="1"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">
                            <VideoView
                                android:layout_width="141dp"
                                android:layout_height="77dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video number 1"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:textSize="20dp"
                                android:textColor="@color/text_blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45Mb"
                                android:fontFamily="@font/nunito"
                                android:textSize="20dp"
                                android:textColor="@color/grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="fill"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">
                            <VideoView
                                android:layout_width="141dp"
                                android:layout_height="77dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video number 2"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:textSize="20dp"
                                android:textColor="@color/text_blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="65Mb"
                                android:fontFamily="@font/nunito"
                                android:textSize="20dp"
                                android:textColor="@color/grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="fill"
                            android:layout_rowWeight="1"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="29dp"
                            android:layout_marginStart="20dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">
                            <VideoView
                                android:layout_width="141dp"
                                android:layout_height="77dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video number 3"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:textSize="20dp"
                                android:textColor="@color/text_blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50Mb"
                                android:fontFamily="@font/nunito"
                                android:textSize="20dp"
                                android:textColor="@color/grey"/>
                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp">



                <androidx.cardview.widget.CardView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/dot_dummy1"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="61dp"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/med_grey">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/dot_dummy_2"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="61dp"
                    android:layout_toEndOf="@+id/dot_dummy1"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/med_grey"
                   />

                <androidx.cardview.widget.CardView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="61dp"
                    android:layout_toEndOf="@+id/dot_dummy_2"
                    app:cardCornerRadius="250dp"
                    android:foreground="@color/text_blue"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>