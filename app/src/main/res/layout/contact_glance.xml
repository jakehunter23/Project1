<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:id="@+id/cand_dp_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cand_dp_hold"
                android:layout_marginStart="28dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/candidate_dp"
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:src="@drawable/dp_1"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/cand_dp_hold"
                android:text="John Smith"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"/>

            <TextView
                android:id="@+id/cand_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@+id/cand_name"
                android:text="#JB13096"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="13dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/cand_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cand_name"
                android:layout_marginStart="28dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/cand_dp_hold"
                android:text="Web Developer"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="13dp"
                android:textColor="@color/text_blue"/>

            <TextView
                android:id="@+id/cand_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cand_tag"
                android:layout_marginStart="9dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/cand_title"
                android:text="-Fox Hunt"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="13dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/cand_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cand_title"
                android:textColor="@color/grey"
                android:layout_marginStart="28dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/cand_dp_hold"
                android:text="Hydderabad"
                android:drawableLeft="@drawable/location_on"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cand_edit_button"
                android:layout_width="159dp"
                android:layout_marginBottom="20dp"
                android:layout_height="48dp"
                android:text="Edit Contact"
                android:layout_marginTop="30dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/background_solid"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:fontFamily="@font/nunito_semibold"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_description_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="38dp"
            android:layout_gravity="center"
            android:minHeight="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/item_description_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/item_description_title"
                android:src="@drawable/expand_more" />

            <TextView
                android:id="@+id/item_description_title"
                android:layout_width="wrap_content"
                android:text="More information"
                android:textColor="@color/grey"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center" />


        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            android:id="@+id/contact_glance_tablay"
            app:tabSelectedTextColor="@color/text_blue"
            app:tabIndicatorColor="@color/text_blue"
            app:tabTextColor="@color/black"
            app:tabTextAppearance="@style/MyCustomTextAppearance"
            app:tabMinWidth="140dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At a glance"
                android:id="@+id/con_glance"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments"
                android:id="@+id/con_app"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:id="@+id/con_act"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jobs"
                android:id="@+id/con_job"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Files"
                android:id="@+id/con_files_tab"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:id="@+id/con_note"/>
        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/con_main_frag">

        </FrameLayout>
    </LinearLayout>
</ScrollView>