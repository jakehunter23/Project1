<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="false">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_expand_card"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="34dp"
        app:cardCornerRadius="10dp"
        android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/textView196"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acturial Assistant"
            android:layout_marginTop="31dp"
            android:layout_marginStart="30dp"
            android:textSize="18dp"
            android:textColor="@color/text_blue"
            android:fontFamily="@font/nunito_semibold"/>


        <TextView
            android:id="@+id/textView197"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView196"
            android:layout_marginStart="27dp"
            android:layout_marginTop="8dp"
            android:text="Hyderabad"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito"
            android:drawableLeft="@drawable/location_on"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/textView198"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView196"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/textView197"
            android:text="#1544-1"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="26dp"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hidden_info"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView199"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Added on:"
            android:layout_marginStart="30dp"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/cliglan_rec2_addate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView199"
            android:textSize="16dp"
            android:text="05-05-2021"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/cliglan_rec2_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cliglan_rec2_addate"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:textSize="16dp"
            android:text="Full time"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/textView202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cliglan_rec2_full"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:text="Company contact"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/cliglan_rec2_com_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView202"
            android:layout_marginStart="30dp"
            android:text="Philip Martin"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/cliglan_rec2_com_conmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cliglan_rec2_com_contact"
            android:layout_marginStart="30dp"
            android:layout_marginTop="6dp"
            android:text="philipmartin@gmail.com"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cliglan_rec2_com_conmail"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/visibility" />

        <TextView
            android:id="@+id/textView205"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView10"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:layout_marginStart="34dp"
            android:text="10"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cliglan_rec2_com_conmail"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/imageView10"
            app:srcCompat="@drawable/assignment_turned_in" />

        <TextView
            android:id="@+id/textView206"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView13"
            android:layout_marginStart="33dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageView10"
            android:gravity="center"
            android:text="6"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cliglan_rec2_com_conmail"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/imageView13"
            app:srcCompat="@drawable/how_to_reg" />

        <TextView
            android:id="@+id/textView207"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView16"
            android:layout_marginStart="27dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageView13"
            android:gravity="center"
            android:text="1/4"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <TextView
            android:id="@+id/textView208"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView205"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:text="Recruiter"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/cliglan_rec2_recname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView208"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="Sandra Viscenta"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/cliglan_rec2_recmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cliglan_rec2_recname"
            android:layout_marginStart="30dp"
            android:text="sandaviscenta@gmail.com"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option_click"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp">

            <TextView
                android:id="@+id/show_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show more"
                android:textSize="15dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito"/>

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/show_more"
                app:srcCompat="@drawable/expand_more" />
        </RelativeLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>