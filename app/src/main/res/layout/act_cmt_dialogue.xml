<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="0dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="29dp"
            android:text="Add Title *"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:id="@+id/addTitle"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:textStyle="bold"
            android:hint="Add title here"
            android:gravity="center_vertical"
            android:background="@drawable/background"
            android:paddingLeft="29dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="29dp"
            android:text="Add Date *"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:id="@+id/modify_dates"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:textStyle="bold"
            android:hint="Add date here"
            android:gravity="center_vertical"
            android:background="@drawable/background"
            android:paddingLeft="29dp"
            android:textSize="17dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/nunito"
            android:text="Add Comment *"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:ems="10"
            android:id="@+id/addnotes"
            android:hint="Add comment here"
            android:layout_marginTop="10dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:textStyle="bold"
            android:gravity="clip_vertical"
            android:paddingTop="18dp"
            android:background="@drawable/background"
            android:paddingLeft="29dp"
            android:textSize="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="29dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:ems="10"
                android:id="@+id/cmnt_button_save"
                android:layout_marginTop="21dp"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Save"
                android:textAllCaps="false"
                android:background="@drawable/background_solid"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:ems="10"
            android:id="@+id/cmnt_button_cancel"
            android:layout_marginTop="21dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="29dp"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Cancel"
                android:background="@drawable/background_solid"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
