<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_for_actapt"
        app:cardCornerRadius="7dp"
        android:layout_marginBottom="34dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="26dp"
                    app:cardCornerRadius="250dp"
                    android:id="@+id/mycon_list_dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:id="@+id/imageView58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@tools:sample/avatars" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView405"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@+id/mycon_list_dp"
                    android:text="Chris Do"
                    android:textSize="16dp"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito_semibold"/>

                <TextView
                    android:id="@+id/textView418"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@+id/textView405"
                    android:text="(B.Tech)"
                    android:textSize="16dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito"/>

                <TextView
                    android:id="@+id/textView406"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView405"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/mycon_list_dp"
                    android:text="johnsmith@gmail.com"
                    android:textSize="16dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ghost_layout">

                <TextView
                    android:id="@+id/textView407"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#JB13096"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="37dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView408"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status :"
                    android:textSize="16dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="37dp"/>

                    <TextView
                        android:id="@+id/textView420"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/nunito"
                        android:layout_toEndOf="@+id/textView408"
                        android:text="Rejected" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView409"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Through :"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/nunito"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="37dp"/>

                    <TextView
                        android:id="@+id/textView421"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:textColor="@color/text_blue"
                        android:fontFamily="@font/nunito"
                        android:layout_toEndOf="@+id/textView409"
                        android:text="LinkedIn" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView412"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nunito"
                        android:text="Recruiter name :"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView419"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@+id/textView412"
                        android:text="Recruiter Name" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView414"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Added on :"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/nunito"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="37dp"/>

                    <TextView
                        android:id="@+id/textView415"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/textView414"
                        android:text="05-05-2021"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito"/>
                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/click_me"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textView211"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show more"
                    android:textSize="15dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/textView211"
                    app:srcCompat="@drawable/expand_more" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>