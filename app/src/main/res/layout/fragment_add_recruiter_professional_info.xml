<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="127dp">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="101dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="33dp"
                android:fontFamily="@font/nunito"
                android:text="General Information"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="52dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="44dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginEnd="329dp"
                    android:layout_marginBottom="44dp"
                    app:srcCompat="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView133"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comny_name"
            android:layout_marginStart="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/recruiterCompanynameET"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Candidate currently employed in?"
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="22dp"
            android:paddingLeft="29dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/background"/>

        <TextView
            android:id="@+id/create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/designation"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/recruiterDesignation"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Enter current job title of the candidate"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/create_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business email"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="26dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_semibold"/>

        <EditText
            android:id="@+id/recruiterBusinessEmail"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:textColor="@color/grey"
            android:textSize="22dp"
            android:fontFamily="@font/nunito_semibold"
            android:inputType="textPersonName"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background"
            android:paddingLeft="29dp"
            android:hint="Enter business email id"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp">

            <androidx.cardview.widget.CardView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:id="@+id/ct_dot1"
                android:foreground="@drawable/background"
                app:cardCornerRadius="250dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:id="@+id/ct_dot2"
                android:layout_toEndOf="@id/ct_dot1"
                app:cardBackgroundColor="@color/text_blue"
                app:cardCornerRadius="250dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>


        </RelativeLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="93dp"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="26dp"
            android:text="Save and Proceed"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:background="@drawable/background_solid"
            android:textAllCaps="false"
            android:drawableRight="@drawable/next_icon"
            android:textAlignment="textEnd"
            android:drawablePadding="12dp"
            android:paddingRight="70dp"/>


    </LinearLayout>
</ScrollView>
