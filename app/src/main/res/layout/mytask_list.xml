<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewrelative"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="27dp"
        android:layout_height="403dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="27dp"
        android:outlineAmbientShadowColor="#CFCFCF80"
        android:layout_marginTop="36dp"

        android:backgroundTint="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="48dp">
            <androidx.cardview.widget.CardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="26dp"
                app:cardCornerRadius="250dp">
                <ImageView
                    android:id="@+id/imageprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/maskprofile"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:fontFamily="@font/nunito_semibold"

                android:layout_marginLeft="87dp"/>




        </RelativeLayout>

        <TextView
            android:id="@+id/textjob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App store screenshot design"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="26dp"/>



        <SeekBar
            android:id="@+id/seekBar6"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginEnd="41dp"
            android:max="100"
            android:min="0"
            android:progress="60"

            android:layout_marginTop="175dp"
            android:progressDrawable="@drawable/seek_bar"
            android:progressTint="@color/text_blue"
            android:thumb="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18%"
            android:textColor="#7D7D7D"
            android:textSize="13dp"
            android:layout_marginTop="171dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"/>


        <androidx.cardview.widget.CardView
            android:layout_width="93dp"
            android:layout_height="41dp"
            android:layout_gravity="right"
            android:layout_marginRight="27dp"
            android:layout_marginTop="319dp"
            android:backgroundTint="#3CA6DA"
            android:outlineAmbientShadowColor="#CFCFCF80"

            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:text="Open"
                android:textSize="19dp"

                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</RelativeLayout>