<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="250dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:id="@+id/task_item2_dp">

        <ImageView
            android:id="@+id/imageView52"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/dp_1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView343"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/task_item2_dp"
        android:text="Username"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_semibold"/>

    <TextView
        android:id="@+id/textView344"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView343"
        android:layout_marginStart="19dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/task_item2_dp"
        android:text="24 July 2021"
        android:textSize="16dp"
        android:textColor="@color/grey"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/textView345"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView343"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView344"
        android:text="|"
        android:textSize="16dp"
        android:textColor="@color/grey"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/textView346"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00 pm"
        android:layout_below="@+id/textView343"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView345"
        android:textSize="16dp"
        android:textColor="@color/grey"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/textView347"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_item2_dp"
        android:layout_marginTop="20dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ...."
        android:layout_marginStart="28dp"
        android:layout_marginEnd="23dp"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/textView348"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView347"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="23dp"
        android:text="Reply"
        android:drawableLeft="@drawable/reply_black_24dp"
        android:drawablePadding="4dp"
        android:textSize="15dp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/text_blue"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/textView348"
        android:background="@color/light_grey"/>
</RelativeLayout>