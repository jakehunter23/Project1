<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/usage_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:paddingBottom="7dp">

            <SearchView
                android:layout_width="286dp"
                android:id="@+id/usage_search"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="27dp"
                android:background="@drawable/searchview_bg"
                android:layoutDirection="rtl"
                android:searchIcon="@null"
                android:queryHint="Search by File name"
                android:queryBackground="@drawable/searchview_bg"
                android:theme="@style/AppSearchView">

            </SearchView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="264dp"
                android:src="@drawable/search"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/usage_search"
                app:cardCornerRadius="10dp"
                android:elevation="2dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_margin="13dp"
                    android:layout_marginTop="5dp"
                    tools:src="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="146dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="39dp"
            android:text="Add File"
            android:background="@drawable/background_solid"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            android:drawableRight="@drawable/add"
            android:paddingRight="15dp"
            android:textAlignment="textEnd"
            android:drawablePadding="12dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Recent"
            android:textColor="@color/text_blue"
            android:textSize="18dp"
            android:drawableRight="@drawable/arrow_up"
            android:drawablePadding="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/filecard"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</RelativeLayout>