<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/backbutton"
                android:src="@drawable/arrow_back_black"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="191dp"
                android:layout_height="164dp"
                android:layout_marginLeft="112dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="27dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Web Developer"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="16dp"
                    android:layout_marginLeft="90dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bangalore"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#7D7D7D"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp"/>




            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="431dp"
                android:layout_marginRight="27dp"
                android:backgroundTint="#EBEDEE"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="15dp">                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="35dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="37dp"
                            android:background="@drawable/mail_outline" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="11dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="email address"
                            android:textAllCaps="false"
                            android:textColor="#676767"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="35dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="37dp"
                            android:background="@drawable/call" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="11dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="+91 8982665932"
                            android:textAllCaps="false"
                            android:textColor="#676767"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="31dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Skills"
                        android:textColor="#676767"
                        android:textSize="17dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="35dp"
                            android:foreground="@drawable/background_black"/>

                    </LinearLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1125dp"
            android:layout_marginTop="676dp"
            android:backgroundTint="#DFDADA"
            android:outlineSpotShadowColor="#00000024"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="26dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28dp"

                        android:fontFamily="@font/nunito"
                        android:text="Profile"
                        android:textColor="@color/black"
                        android:textSize="27dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Edit"
                        android:textColor="@color/text_blue"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="251dp"
                        android:fontFamily="@font/nunito"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>



</RelativeLayout>
