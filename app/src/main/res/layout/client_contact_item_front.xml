<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="16dp"
        app:cardCornerRadius="10dp"
        android:foreground="@drawable/card_bg_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cli_contact_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:src="@drawable/dp_1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/clicon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/cli_contact_dp"
                android:text="Sansa"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"/>

            <TextView
                android:id="@+id/textView219"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clicon_name"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/cli_contact_dp"
                android:text="Last interacted"
                android:textSize="14dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito"/>


            <TextView
                android:id="@+id/clicon_up_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clicon_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView219"
                android:text="05-05-2021"
                android:textSize="14dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/path_n" />






        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>